STRING_TO_LOWERCASE ; ( str -- str )
    lda LSB,x
    sta TMP
    lda MSB,x
    sta TMP+1
    ldy #0
    lda (TMP),y
    tay
.loopstart
    beq .loopend 

    lda (TMP),y
    sec
    sbc #'a' + $80 
    cmp #'z' - 'a'
    bcs +
    adc #'a'
    sta (TMP),y
+
    lda (TMP),y
    sec
    sbc #'A'
    cmp #'z' - 'a'
    bcs +
    adc #'a'
    sta (TMP),y
+   
    dey
    jmp .loopstart

.loopend
    rts
